<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.promoters">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".promoter_section.search_for_chance.ActiveEventsActivity"></activity>
        <activity android:name=".promoter_section.profile.PromoterProfileActivity" />
        <activity android:name=".promoter_section.events_history.PromoterEventsHistoryActivity" />
        <activity android:name=".organizer_section.new_event.NewEventActivity" />
        <activity android:name=".organizer_section.events_history.EventsHistoryActivity" />
        <activity android:name=".organizer_section.organizer_profile.OrganizerHistoryProfile" />
        <activity android:name=".promoter_section.PromoterMainActivity" />
        <activity android:name=".organizer_section.OrganizerMainActivity" />
        <activity android:name=".register.RegisterActivity" />
        <activity android:name=".login.LoginActivity" />
        <activity
            android:name=".SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>